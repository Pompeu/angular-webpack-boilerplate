{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "plugins": [
    "standard"
  ],
  "env": {
    "browser": false,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "angular": true,
    "spyOn": true,
    "inject": true,
    "expect": true,
    "beforeEach": true
  },
  "rules": {
    "eqeqeq": ["error", "smart"],
    "camelcase": ["error", {"properties": "always"}],
    "semi": ["error","always"],
    "curly": "error",
    "prefer-const": "warn",
    "no-const-assign": "error",
    "no-console": "warn",
    "no-var": "error",
    "padded-blocks": ["off", "always"],
    "operator-assignment": ["error", "always"],
    "no-cond-assign": ["error","always"],
    "prefer-arrow-callback": ["error"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "minimum",
        "align": "value"
      }
    ],
    "no-multi-spaces": [
      "error", {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ]
  }
}
